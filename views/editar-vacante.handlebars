<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Información General</h3>

        <div class="campo">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
        </div>

        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" placeholder="Ej: InfoDeck" value="{{vacante.empresa}}" required>
        </div>

        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: Colombia o Remoto" value="{{vacante.ubicacion}}"
                required>
        </div>

        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej: $500 a $1000 USD" value="{{vacante.salario}}" required>
        </div>

        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                <option value="" disabled selected>-- Seleciona una opción --</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>

        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" id="skills" name="skills">
            <input type="submit" value="Guarda Cambios" class="btn btn-azul">
        </div>
    </form>
</main>